{% extends "front/layout.html.twig" %}

{% block title %}Authentification{% endblock %}

{% block body %}
    <br/>
    {% if errors %}
        <div class="alert alert-danger" role="alert">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <h2>Create account</h2>
    <form method="post">
        <label for="create_name">Nom</label>
        <input id="create_name" class="form-control" type="text" name="lastname">

        <label for="create_name">Prénom</label>
        <input id="create_name" class="form-control" type="text" name="firstname">

        <label for="create_email">Email</label>
        <input id="create_email" class="form-control" type="email" name="email">

        <label for="create_password">Mot de passe</label>
        <input id="create_password" class="form-control" type="password" name="password">

        <input class="form-control btn btn-primary" type="submit" name="addUser" value="Créer">
    </form>
{% endblock %}
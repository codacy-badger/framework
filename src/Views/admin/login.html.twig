<body class="bg-gradient-primary">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Tableau de bord</h1>
                                </div>
                                <form class="user" action="/admin/authentification" method="POST">
                                    <div class="form-group">
                                        <input name="connectionAdminEmail" type="email"
                                               class="form-control form-control-user" id="exampleInputEmail"
                                               aria-describedby="emailHelp" placeholder="Votre adresse email">
                                    </div>
                                    <div class="form-group">
                                        <input name="connectionAdminPasswd" type="password"
                                               class="form-control form-control-user" id="exampleInputPassword"
                                               placeholder="Mot de passe">
                                    </div>
                                    <input type="submit" name="connectionAdmin"
                                           class="btn btn-primary btn-user btn-block" value="Se connecter">
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="/">Visiter le site</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>


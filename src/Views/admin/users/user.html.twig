{% extends 'layout.html.twig' %}

{% block body %}
    <body id="page-top">

    <!-- Page Wrapper -->
<div id="wrapper">
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Utilisateur #{{ user.id_user }}</h1>
            <p class="mb-4">Ici vous trouverez la liste de tous les utilisateus s'étend inscrit sur votre site. Vous
                pourrez consulter leurs informationsn ainsi que participer à leur gestion</p>
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Mon utilisateur</h6>
                        <a id="test" class="dropdown-item d-flex align-items-center" href="#">
                            <div class="ml-auto">
                                <div class="icon-circle bg-success">
                                    <i class="fas fa-check text-white"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div>
                            <p>{{ user.firstname }} {{ user.lastname }}</p>
                            <p>{{ user.date_add|date('d/m/Y') }}</p>
                        </div>
                        <form id="formAdmin" class="d-none" action="">
                            <input class="form-control" type="text" value="{{ user.firstname }}">
                            <input class="form-control" type="text" value="{{ user.lastname }}">
                            <input class="btn btn-success" type="submit" value="Modifier">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->

    </div>
{% endblock %}
{% extends "layout.html.twig" %}

{% block body %}
    <h1>Édition du profil</h1>
    <form method="post" enctype="multipart/form-data">
        <div style="margin: 0 auto" class="text-center col-6 mb-3">
            {% if user.image_name != null %}
                <img style="max-height: 200px; max-width: 200px;" id="userImg" src="/img/user/{{ user.image_name }}" alt="">
                <input id="deleteImg" type="submit" name="deleteImg" value="Supprimer" onclick="if(confirm('Êtes-vous sûr ?')){return true;}else{return false;}">
            {% else %}
                <input id="file" class="input-file" type="file" name="userImg">
                <p id="file-upload-filename"></p>
            {% endif %}
        </div>
        <div class="row">
            <div class="col">
                <label for="lastname">Nom</label>
                <input class="form-control" id="lastname" type="text" name="lastname" placeholder="Nom" value="{{ user.lastname }}">
            </div>
            <div class="col">
                <label for="firstname">Prénom</label>
                <input class="form-control" id="firstname" type="text" name="firstname" placeholder="Nom" value="{{ user.firstname }}">
            </div>
        </div>
        <label for="email">Email</label>
        <input id="email" class="form-control" type="email" name="email" placeholder="Email" value="{{ user.email }}">
        <br />
        <input class="form-control btn btn-primary" type="submit" name="updateUser" value="Modifier mes informations">
    </form>
    <a class="form-control btn btn-danger" href="/user/delete/{{ user.id }}">Supprimer mon compte</a>
{% endblock %}
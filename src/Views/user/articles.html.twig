{% extends "layout.html.twig" %}

{% block title %}Mes articles{% endblock %}

{% block body %}
    <h1 class="mt-3">Mes articles</h1>
    <div class="clearfix" style="margin-bottom: 10px">
        <a href="javascript:history.go(-1)" class="btn btn-primary"><i class="fas fa-chevron-left"></i> Retour</a>
        <a href="/article/add" class="btn btn-success float-right"><i class="fas fa-plus"></i>
            Créer</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titre</th>
            <th scope="col">Contenu</th>
            <th scope="col">Date d'ajout</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr style="cursor: pointer" onclick="document.location = '/article/edit/{{ article.id }}'" class="table-row-link">
                <th scope="row">{{ article.id }}</th>
                <td>{{ article.title }}</td>
                <td>{{ article.content|striptags|truncate(100, true) }}</td>
                <td>{{ article.date_add|date("d/m/Y H:m:i") }}</td>
            </tr>
        {% endfor %}
        {% if articles|length < 1 %}
            <tr class="table-row-link">
                <th style="text-align: center" colspan="4">Actuellement, vous n'avez créé aucun article</th>
            </tr>
        {% endif %}
        </tbody>
    </table>
{% endblock %}
{% extends "layout.html.twig" %}

{% block body %}
    <h1>Editer un article</h1>
    <form method="post">
        <label for="title">Titre</label>
        <input id="title" class="form-control" type="text" name="titleArticle" value="{{ article.title }}">

        <label for="content">Contenu</label>
        <textarea id="content" class="form-control" name="contentArticle" cols="30" rows="10">{{ article.content }}</textarea>

        <input class="form-control btn btn-primary" type="submit" name="addArticle">
    </form>
    <a class="form-control btn btn-danger" href="/article/delete/{{ article.id }}">Supprimer cet article</a>
{% endblock %}